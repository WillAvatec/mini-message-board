extends layout

block content

    ul 
      each message in messages 
        li
          .row
            .row-wrapper
              span
              .message
                .message--content 
                  div
                    .content--padding
                      .top-content
                        span.author--name #{message.user}
                      .main-content
                        span.content--text--wrapper
                          .content-text #{message.text}
                        span
                          span.next-line


                      .date
                        span #{message.added.toLocaleString('en-GB',{dateStyle:"short", timeStyle:"short"})}

    footer
      span.smiley
        svg(width="24px", height="24px")
          use (xlink:href="../images/smiley.svg#smiley")
      .cross
      a(href="/new") Add a new Message